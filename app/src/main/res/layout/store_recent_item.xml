<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="245px"
    android:descendantFocusability="blocksDescendants"
    android:weightSum="6">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="245px">
        <LinearLayout
            android:id="@+id/ll_whole"
            android:layout_width="0dp"
            android:layout_height="245px"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/bt_cancel"
                android:layout_height="67dp"
                android:layout_width="match_parent"
                android:background="@color/transparentGreen"
                android:scaleType="centerInside"
                android:focusableInTouchMode="true"
                android:src="@drawable/bt_cancel_appoint"/>
            <TextView
                android:id="@+id/tv_countdown"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="hello"
                android:textColor="@color/colorPrimary"/>
        </LinearLayout>

        <com.example.yang.flashtable.RoundedImageView
            android:id="@+id/im_photo"
            android:layout_width="0dp"
            android:layout_height="245px"
            android:layout_margin="10dp"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="245px"
            android:layout_weight="3"
            android:weightSum="2"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.1"
                android:layout_marginTop="25dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:textSize="26sp"/>

            <TextView
                android:id="@+id/tv_number"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.9"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:textSize="18sp"
                android:text="預約100人" />
        </LinearLayout>
        <ImageButton
            android:id="@+id/bt_confirm"
            android:layout_width="0dp"
            android:layout_height="245px"
            android:layout_weight="1"
            android:background="@color/transparentGreen"
            android:scaleType="centerInside"
            android:focusableInTouchMode="true"
            android:src="@drawable/bt_confirm_appoint"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/im_confirmed"
        android:layout_width="match_parent"
        android:layout_height="245px"
        android:scaleType="centerInside"/>
</FrameLayout>