<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorHalfTransparent"
    android:id="@+id/store_manage_statistic_row">

    <ImageView
        android:id="@+id/store_manage_statistic_row_iv_rank"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="55px"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/ic_menu_gallery" />


    <TextView
        android:id="@+id/store_manage_statistic_row_tv_rank"
        android:layout_width="wrap_content"
        android:layout_height="150px"
        android:layout_marginStart="38dp"
        android:layout_weight="1"
        android:text=""
        android:textColor="@color/textColorOrangeDark"/>

    <TextView
        android:id="@+id/store_manage_statistic_row_tv_detail"
        android:layout_width="wrap_content"
        android:layout_height="150px"
        android:layout_marginStart="10dp"
        android:paddingTop="10dp"
        android:layout_weight="8"
        android:text=""
        android:textSize="14sp"
        android:textColor="@color/textColor"/>

    <TextView
        android:id="@+id/store_manage_statistic_row_tv_num"
        android:layout_width="wrap_content"
        android:layout_height="150px"
        android:paddingTop="10dp"
        android:layout_marginRight="30px"
        android:layout_weight="1"
        android:text=""
        android:textColor="@color/textColorOrangeDark"
        android:textSize="14sp"/>

</LinearLayout>