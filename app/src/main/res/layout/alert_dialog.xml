<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="250dp"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/alert_title"
        android:background="@drawable/round_top_rectangle_orange"
        android:textColor="@color/white"
        android:padding="10dp"
        android:textAlignment="center"
        android:textSize="20sp"/>

    <LinearLayout
        android:id="@+id/alert_ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_margin="2dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/alert_tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/alert_title"
            android:textColor="@color/textColorLight"
            android:textAlignment="center"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/alert_bt_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_rectangle_orange"
            android:text="@string/ok"
            android:textColor="@color/white"
            android:layout_marginBottom="20dp"
            android:padding="10dp"/>

    </LinearLayout>
    
</LinearLayout>