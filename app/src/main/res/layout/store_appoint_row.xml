<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorHalfTransparent"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <android.support.v7.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="25dp"
            android:elevation="12dp"
            app:cardCornerRadius="25dp"
            android:innerRadius="0dp"
            android:shape="ring"
            android:layout_gravity="center"
            android:thicknessRatio="1.9">

            <ImageView
                android:id="@+id/store_appoint_row_iv_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:src="@drawable/iv_deault_picture" />
        </android.support.v7.widget.CardView>


        <LinearLayout
            android:layout_width="190dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/store_appoint_row_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="23dp"
                android:layout_marginTop="10dp"
                android:text=""
                android:textColor="@color/textColor"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/store_appoint_row_tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="23dp"
                android:text=""
                android:textColor="@color/textColor"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/store_appoint_row_tv_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="23dp"
                android:text=""
                android:textColor="@color/textColorOrange"
                android:textSize="12sp" />

        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_gravity="center">
                <ImageButton
                    android:id="@+id/bt_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:scaleType="centerInside"
                    android:background="@color/transparentGreen"
                    android:layout_gravity="center"/>
            </FrameLayout>
            <FrameLayout
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_gravity="center">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_remaining_time"
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:gravity="center"
                        android:text="剩餘到達時間"
                        android:textSize="12sp"/>
                    <TextView
                        android:id="@+id/tv_countdown"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:gravity="center"
                        android:textSize="13sp"/>
                </LinearLayout>
            </FrameLayout>
        </FrameLayout>
    </LinearLayout>


</RelativeLayout>
