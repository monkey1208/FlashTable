<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="245px"
    android:background="@color/colorHalfTransparent">

    <android.support.v7.widget.CardView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="55px"
        android:elevation="12dp"
        app:cardCornerRadius="25dp"
        android:innerRadius="0dp"
        android:shape="ring"
        android:layout_gravity="center"
        android:thicknessRatio="1.9">

        <ImageView
            android:id="@+id/store_manage_record_row_iv_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/iv_deault_picture"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"/>
    </android.support.v7.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/store_manage_record_row_tv_name"
                android:textColor="@color/textColor"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="23dp"
                android:layout_marginTop="10dp"
                android:text="" />

            <TextView
                android:id="@+id/store_manage_record_row_tv_date"
                android:textColor="@color/textColor"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="23dp"
                android:text="" />
            <TextView
                android:id="@+id/store_manage_record_row_tv_state"
                android:textColor="@color/textColorOrange"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="23dp"
                android:text="" />

        </LinearLayout>
</LinearLayout>