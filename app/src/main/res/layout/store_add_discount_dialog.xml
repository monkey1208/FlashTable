<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingEnd="30dp"
        android:paddingStart="30dp"
        android:text="編輯來店優惠"
        android:gravity="center_vertical"
        android:textColor="@color/textColor"
        android:textSize="16sp"/>

    <EditText
        android:id="@+id/store_add_discount_dialog_et_gift"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/store_add_discount_dialog_et_bg"
        android:ems="4"
        android:inputType="textMultiLine"
        android:paddingEnd="5dp"
        android:paddingStart="5dp"
        android:hint="ex：50元飲料乙杯\n(輸入內文以50字為上限)"
        android:maxLength="50"
        android:textSize="14sp"
        android:textColor="@color/textColorLight"
        android:textColorHint="#AAAAAA"/>

    <ImageButton
        android:id="@+id/store_add_discount_dialog_bt_confirm"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:scaleType="centerInside"
        android:src="@drawable/bt_confirm"
        android:background="@color/transparentGreen"/>

    <ImageButton
        android:id="@+id/store_add_discount_dialog_bt_cancel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:scaleType="centerInside"
        android:src="@drawable/bt_cancel"
        android:background="@color/transparentGreen"/>


</LinearLayout>