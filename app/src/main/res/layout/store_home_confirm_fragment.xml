<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.example.yang.flashtable.StoreHomeConfirmFragment">
    <ImageButton
        android:id="@+id/bt_click"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:background="@color/transparentGreen"
        android:src="@drawable/bt_confirm_bottom"/>
    <LinearLayout
        android:id="@+id/store_home_confirm_fragment_ll_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="25dp"
        android:layout_marginStart="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <com.example.yang.flashtable.RoundedImageView
                android:id="@+id/iv_photo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="15dp"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:text="張庭維"
                android:textColor="@color/textColor"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/store_home_comfirm_fragment_tv_info_first"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="預約 "
                android:textColor="@color/colorPrimary"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/tv_number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="10"
                android:textColor="@color/colorPrimary"
                android:textSize="42sp" />

            <TextView
                android:id="@+id/store_home_comfirm_fragment_tv_info_last"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text=" 人已到達"
                android:textColor="@color/colorPrimary"
                android:textSize="22sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/store_home_confirm_fragment_ll_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/store_home_confirm_fragment_tv_appoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="預約時間 ："
                android:textSize="14sp"
                android:textColor="@color/textColorLighter" />

            <TextView
                android:id="@+id/store_home_confirm_fragment_tv_appoint_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="14sp"
                android:textColor="@color/textColorLighter" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="3dp"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/store_home_confirm_fragment_tv_arrive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="入座時間 ："
                android:textSize="14sp"
                android:textColor="@color/textColorLighter" />

            <TextView
                android:id="@+id/store_home_confirm_fragment_tv_arrive_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="14sp"
                android:textColor="@color/textColorLighter" />
        </LinearLayout>

    </LinearLayout>


    <ImageView
        android:id="@+id/store_home_comfirm_fragment_divider"
        android:layout_below="@+id/store_home_confirm_fragment_ll_info"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:background="#DDDDDD"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:id="@+id/store_home_confirm_fragment_ll_discount"
        android:layout_below="@id/store_home_comfirm_fragment_divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="限時折扣優惠"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="20sp"
            android:textColor="@color/textColor"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/ic_store_gift" />

            <TextView
                android:id="@+id/store_home_confirm_fragment_tv_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:text="95折"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_marginStart="10dp">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/ic_store_discount" />

            <TextView
                android:id="@+id/store_home_confirm_fragment_tv_gift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="消費滿100送XXXXXX"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorPrimary"/>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/store_home_comfirm_fragment_divider_btm"
        android:layout_below="@+id/store_home_confirm_fragment_ll_discount"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:background="#DDDDDD"
        android:layout_marginTop="20dp"/>

</RelativeLayout>
