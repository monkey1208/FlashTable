<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="@color/colorHalfTransparent"
    android:id="@+id/store_manage_discount_row"
    android:layout_height="135px">

    <TextView
        android:id="@+id/store_manage_discount_row_tv_description"
        android:layout_width="wrap_content"
        android:layout_height="135px"
        android:layout_weight="8"
        android:layout_marginStart="55px"
        android:layout_marginTop="19dp"
        android:text=""
        android:textColor="@color/textColor"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/store_manage_discount_row_tv_todefault"
        android:layout_width="wrap_content"
        android:layout_height="135px"
        android:layout_weight="1"
        android:layout_marginTop="19dp"
        android:text="設為預設"
        android:textSize="14sp"
        android:textColor="@color/textColorOrange"/>

    <ImageView
        android:id="@+id/store_manage_discount_row_iv_default"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_weight="1"
        android:layout_marginEnd="55px"
        android:layout_marginTop="18dp"
         />
</LinearLayout>