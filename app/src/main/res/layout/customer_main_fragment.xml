<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.yang.flashtable.CustomerMainActivity">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/customer_bg_main"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:orientation="horizontal"
        android:gravity="center">

        <View
            android:layout_width="70dp"
            android:layout_height="40dp"/>

        <ImageButton
            android:id="@+id/customer_main_ib_search"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_search"
            android:background="@android:color/transparent"/>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:scaleType="fitCenter"
            android:src="@drawable/logo_white"/>

        <View
            android:layout_width="40dp"
            android:layout_height="40dp"/>

        <View
            android:layout_width="40dp"
            android:layout_height="40dp"/>

    </LinearLayout>

    <!-- Options -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPrimaryLight"
        android:elevation="5dp">

        <Spinner
            android:id="@+id/customer_main_sp_distance"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_marginEnd="1dp"/>
        <Spinner
            android:id="@+id/customer_main_sp_food"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"/>
        <Spinner
            android:id="@+id/customer_main_sp_sort"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_marginStart="1dp"/>
    </LinearLayout>
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/customer_main_srl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ListView
            android:id="@+id/customer_main_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:dividerHeight="2dp"
            android:divider="@color/lightgray"/>
    </android.support.v4.widget.SwipeRefreshLayout>


</LinearLayout>

