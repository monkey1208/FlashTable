<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/store_confirm_cancel_tv_content"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="38dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:lineSpacingExtra="6sp"
        android:text="TextView\nTextView"
        android:textSize="16sp"
        android:textColor="#666666"/>

    <ImageButton
        android:id="@+id/store_confirm_cancel_bt_confirm"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:scaleType="centerInside"
        android:src="@drawable/bt_confirm"
        android:background="@color/transparentGreen"/>

    <ImageButton
        android:id="@+id/store_confirm_cancel_bt_cancel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:scaleType="centerInside"
        android:src="@drawable/bt_cancel"
        android:background="@color/transparentGreen"/>
</LinearLayout>