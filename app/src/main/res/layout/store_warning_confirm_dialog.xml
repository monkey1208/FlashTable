<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/store_warning_confirm_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/store_alert_dialog_title_bg"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        >
    <TextView
        android:id="@+id/store_warning_confirm_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:text="提醒"
        android:textSize="18sp"
        android:layout_gravity="center" />
    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/store_warning_confirm_tv_content"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:text="TextView" />

    <ImageButton
        android:id="@+id/store_warning_confirm_bt_confirm"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="34dp"
        android:layout_marginEnd="34dp"
        android:scaleType="centerInside"
        android:src="@drawable/bt_confirm"
        android:background="@color/transparentGreen"/>

</LinearLayout>