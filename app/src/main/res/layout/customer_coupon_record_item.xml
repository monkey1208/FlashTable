<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:orientation="vertical">
        
        <TextView
            android:id="@+id/customer_coupon_tv_records_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="成功在"
            android:textSize="16sp"
            android:textColor="@color/textColor"/>
        
        <TextView
            android:id="@+id/customer_coupon_tv_records_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017/4/13 13:00"
            android:textSize="14sp"
            android:textColor="@color/textColorLighter"/>
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/customer_coupon_tv_records_plus9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="17sp"
            android:textColor="@color/textColor"/>

        <ImageView
            android:layout_width="22dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_point_coin"/>

        <TextView
            android:id="@+id/customer_coupon_tv_records_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="60"
            android:textSize="17sp"
            android:textColor="@color/textColor"/>

    </LinearLayout>

</RelativeLayout>