<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.yang.flashtable.StoreManageSuccessFragment">

    <android.support.v7.widget.Toolbar
        android:id="@+id/store_manage_success_tb_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@color/btBottomColor"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:text="預約成功率"
            android:textSize="22sp"
            android:layout_gravity="center" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/store_manage_success_ll_rate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        android:weightSum="9"
        android:background="@color/colorHalfTransparent">

        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginStart="25dp"
            android:gravity="center_vertical"
            android:layout_weight="7"
            android:textSize="16sp"
            android:text="預約成功率"
            android:textColor="@color/textColor"/>
        <TextView
            android:id="@+id/store_manage_success_tv_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/textColorOrangeDark"
            android:text="" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginEnd="25dp"
            android:layout_weight="1"
            android:text="%" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/store_manage_success_ll_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@color/colorHalfTransparent"
        android:orientation="horizontal"
        android:weightSum="9">

        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginStart="25dp"
            android:layout_weight="7"
            android:gravity="center_vertical"
            android:text="總預約數"
            android:textColor="@color/textColor"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/store_manage_success_tv_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textColor="@color/textColorOrangeDark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginEnd="25dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="人" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/store_manage_success_ll_fail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        android:weightSum="9"
        android:background="@color/colorHalfTransparent">
        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginStart="25dp"
            android:gravity="center_vertical"
            android:layout_weight="7"
            android:text="店內無空桌&amp;取消預約"
            android:textSize="16sp"
            android:textColor="@color/textColor"/>
        <TextView
            android:id="@+id/store_manage_success_tv_fail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/textColorOrangeDark"
            android:text="" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginEnd="25dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:text="人" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/store_manage_success_ll_success"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        android:weightSum="9"
        android:background="@color/colorHalfTransparent">
        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginStart="25dp"
            android:gravity="center_vertical"
            android:layout_weight="7"
            android:text="成功預約"
            android:textSize="16sp"
            android:textColor="@color/textColor"/>
        <TextView
            android:id="@+id/store_manage_success_tv_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/textColorOrangeDark"
            android:text="" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginEnd="25dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:text="人" />
    </LinearLayout>



</LinearLayout>
