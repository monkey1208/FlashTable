<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/customer_bg_reservation">

    <ImageButton
        android:id="@+id/customer_register_ib_verify_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:src="@drawable/ic_back_white"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:layout_alignParentStart="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@id/customer_register_ib_verify_back"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/customer_register_enter_code"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:layout_marginBottom="25dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/customer_register_et_verification_1"
                android:layout_width="48sp"
                android:layout_height="55sp"
                android:layout_marginEnd="10dp"
                android:textSize="36sp"
                android:textAlignment="center"
                android:inputType="numberDecimal"
                android:textCursorDrawable="@null"
                android:maxLines="1"
                android:maxEms="1"
                android:background="@drawable/round_rectangle_transparent_white"
                android:ems="1"
                android:maxLength="1"/>
            <EditText
                android:id="@+id/customer_register_et_verification_2"
                android:layout_width="48sp"
                android:layout_height="55sp"
                android:layout_marginEnd="10dp"
                android:textSize="36sp"
                android:textAlignment="center"
                android:inputType="numberDecimal"
                android:textCursorDrawable="@null"
                android:maxLines="1"
                android:maxEms="1"
                android:background="@drawable/round_rectangle_transparent_white"
                android:ems="1"
                android:maxLength="1"/>
            <EditText
                android:id="@+id/customer_register_et_verification_3"
                android:layout_width="48sp"
                android:layout_height="55sp"
                android:layout_marginEnd="10dp"
                android:textSize="36sp"
                android:textAlignment="center"
                android:inputType="numberDecimal"
                android:textCursorDrawable="@null"
                android:maxLines="1"
                android:maxEms="1"
                android:background="@drawable/round_rectangle_transparent_white"
                android:ems="1"
                android:maxLength="1"/>
            <EditText
                android:id="@+id/customer_register_et_verification_4"
                android:layout_width="48sp"
                android:layout_height="55sp"
                android:layout_marginEnd="10dp"
                android:textSize="36sp"
                android:textAlignment="center"
                android:inputType="numberDecimal"
                android:textCursorDrawable="@null"
                android:maxLines="1"
                android:maxEms="1"
                android:background="@drawable/round_rectangle_transparent_white"
                android:ems="1"
                android:maxLength="1"/>

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="@string/customer_register_again_code"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:textAlignment="viewStart"/>

    </LinearLayout>

    <Button
        android:id="@+id/customer_register_bt_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="15dp"
        android:text="@string/submit"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:textSize="18sp"/>

</RelativeLayout>
