<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/alert_title"
        android:background="@drawable/round_top_rectangle_light_orange"
        android:textColor="@color/white"
        android:padding="10dp"
        android:textAlignment="center"
        android:textSize="20sp"/>

    <LinearLayout
        android:id="@+id/alert_ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_margin="2dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/alert_tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/alert_title"
            android:textColor="@color/textColorLight"
            android:textAlignment="center"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"/>

        <LinearLayout
            android:id="@+id/alert_ll_persons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="30dp">

            <ImageButton
                android:id="@+id/alert_ib_minus"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_minus"/>

            <TextView
                android:id="@+id/alert_tv_persons"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:textColor="@color/textColor"
                android:textSize="20sp"
                android:textAlignment="center"
                android:text="1"/>

            <ImageButton
                android:id="@+id/alert_ib_add"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_plus"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/alert_ll_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_margin="2dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:paddingTop="0dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/alert_bt_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_rectangle_light_orange"
            android:text="@string/ok"
            android:textColor="@color/white"
            android:padding="10dp"/>

        <Button
            android:id="@+id/alert_bt_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_rectangle_white_light_orange"
            android:text="@string/cancel"
            android:textColor="@color/textColorOrange"
            android:padding="10dp"/>

    </LinearLayout>

</LinearLayout>